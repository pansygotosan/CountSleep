					<% end %>
				</div>
				<div class="bar">
					<% if size4<=80 %>
						<%= image_tag("sleep3.png", :width=>size4, :height=> '16') %>
					<% elsif size4>=220 %>
						<%= image_tag("sleep2.png", :width=>size4, :height=> '16') %>
					<% else %>
						<%= image_tag("sleep1.png", :width=>size4, :height=> '16') %>
					<% end %>
				</div>
				<div class="bar">
					<% if size3<=80 %>
						<%= image_tag("sleep3.png", :width=>size3, :height=> '16') %>
					<% elsif size3>=220 %>
						<%= image_tag("sleep2.png", :width=>size3, :height=> '16') %>
					<% else %>
						<%= image_tag("sleep1.png", :width=>size3, :height=> '16') %>
					<% end %>
				</div>
				<div class="bar">
					<% if size2<=80 %>
						<%= image_tag("sleep3.png", :width=>size2, :height=> '16') %>
					<% elsif size2>=220 %>
						<%= image_tag("sleep2.png", :width=>size2, :height=> '16') %>
					<% else %>
