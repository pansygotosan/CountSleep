<!DOCTYPE html>
<html lang="ja">
<head>
	<meta name="viewport" content="width=device-width">
	<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="apple-mobile-web-app-status-bar-style" content="black">
<meta name="apple-mobile-web-app-title" content="bagelee">
	<meta charset="UTF-8" />
	<title>CountSleep-week</title>

	<script type="text/javascript">
    var MsgCnt=10; //メッセージの総数

    var Msg=[];
    Msg[1]="メッセージ1";
    Msg[2]="メッセージ2";
    Msg[3]="メッセージ3";
    Msg[4]="メッセージ4";
    Msg[5]="メッセージ5";
    Msg[6]="メッセージ6";
    Msg[7]="メッセージ7";
    Msg[8]="メッセージ8";
    Msg[9]="メッセージ9";
    Msg[10]="メッセージ10";

    var ary=[];
    for(var i=0;i<MsgCnt;i++)ary[i]=i+1;
    function arySort(){
    ary.sort(function(){return Math.random()-Math.random();});
    }
    var cnt=0;arySort();
    function RandomMsg(){
    if(cnt>=MsgCnt)cnt=0,arySort();
    document.write(Msg[ary[cnt++]]);
    }
  </script>

</head>
<body>
 	<header>
		<div class="container">
			<div class="button"><%= link_to image_tag("gear.png", :size => "50x50"),sleeps_setup_path %></div>
	      	<div class="title">今週の睡眠時間</div>
	      	<div class="button"><%= link_to image_tag("pen.png", :size => "50x50"),new_sleep_path %></div>
		</div>
	</header>
	<div class="week">
		<% sleepgoal=6*3600 %>
		<% six=0 %>
		<% five=0 %>
		<% four=0 %>
		<% tree=0 %>
		<% two=0 %>
		<% one=0 %>
		<% zero=0 %>
		<% size6=0 %>
		<% size5=0 %>	
		<% size4=0 %>
		<% size3=0 %>
		<% size2=0 %>
		<% size1=0 %>
		<% size0=0 %>

		<div class="records">
			


			<% (@start_date..@day).each do |date| %>
				<% sleeps_day = @sleeps.where(start: date.in_time_zone.all_day ) %>
				
				<% if sleeps_day %>
					<% sleepgoal=12*3600 %>
					<% sleepsum=0 %>

					<% sleeps_day.each do |sleep| %>
						<% sleep.start.strftime('%Y年%m月%d日 %H時%M分') %>
					    <% sleep.finish.strftime('%Y年%m月%d日 %H時%M分') %>
					    <% sleeptime=sleep.finish - sleep.start %>
					    <% sleepsum+=sleeptime%>				    
				    <% end %>

				        <% six=five %>
						<% five=four %>
						<% four=tree %>
						<% tree=two %>
						<% two=one %>
						<% one=zero %>
						<% zero=sleepsum %>


						<% size6=six*130/sleepgoal %>
						<% size5=five*130/sleepgoal %>	
						<% size4=four*130/sleepgoal %>
						<% size3=tree*130/sleepgoal %>
						<% size2=two*130/sleepgoal %>
						<% size1=one*130/sleepgoal %>
						<% size0=zero*130/sleepgoal %>

			
				<% end %>
			<% end %>


			<% if size6>300 %>
			<% size6=300 %>
			<% end %>
			<% if size5>300 %>
			<% size5=300 %>
			<% end %>
			<% if size4>300 %>
			<% size4=300 %>
			<% end %>
			<% if size4>300 %>
			<% size4=300 %>
			<% end %>
			<% if size3>300 %>
			<% size3=300 %>
			<% end %>
			<% if size2>300 %>
			<% size2=300 %>
			<% end %>
			<% if size1>300 %>
			<% size1=300 %>
			<% end %>
			<% if size0>300 %>
			<% size0=300 %>
			<% end %>

			

			<% if size1<=80 %>

			<% elsif size1>=220 %>

			<% else %>

			<% end %>
				<div class="bar">
					<% if size6<=80 %>
						<%= image_tag("sleep3.png", :width=>size6, :height=> '16') %>
					<% elsif size6>=220 %>
						<%= image_tag("sleep2.png", :width=>size6, :height=> '16') %>
					<% else %>
						<%= image_tag("sleep1.png", :width=>size6, :height=> '16') %>
					<% end %>
				</div>
				<div class="bar">
					<% if size5<=80 %>
						<%= image_tag("sleep3.png", :width=>size5, :height=> '16') %>
					<% elsif size5>=220 %>
