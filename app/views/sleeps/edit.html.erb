<h1>Sleeps#edit</h1>
<p>Find me in app/views/sleeps/edit.html.erb</p>
<div style="width: 300px;">
  <%= form_for(@sleep) do |f| %>
    <div>
    <%= f.label :start %>
    <%= f.datetime_select :start, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :finish %>
    <%= f.datetime_select :finish, class: 'form-control' %>
  </div>
  <div>
    <%= f.label :type %>
    <%= f.text_field :type, size: class: 'form-control' %>
  </div>
    <%= f.submit 'Submit' %>
  <% end %>
</div>
<p><%= link_to '一覧に戻る', sleeps_url %></p>